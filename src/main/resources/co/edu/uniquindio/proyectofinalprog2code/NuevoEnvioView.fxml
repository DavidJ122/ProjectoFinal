<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.proyectofinalprog2code.ViewController.NuevoEnvioViewController">
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
    <children>
        <Label text="Nuevo Envío">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Separator />

        <HBox spacing="10">
            <children>
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Origen *" />
                        <ComboBox fx:id="comboOrigen" prefWidth="200.0" promptText="Seleccione origen" />
                    </children>
                </VBox>
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Destino *" />
                        <ComboBox fx:id="comboDestino" prefWidth="200.0" promptText="Seleccione destino" />
                    </children>
                </VBox>
            </children>
        </HBox>

        <HBox spacing="10">
            <children>
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Peso (kg) *" />
                        <TextField fx:id="txtPeso" />
                    </children>
                </VBox>
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Volumen (m³) *" />
                        <TextField fx:id="txtVolumen" />
                    </children>
                </VBox>
            </children>
        </HBox>

        <Label text="Servicios Adicionales" />
        <FlowPane hgap="10.0" vgap="10.0">
            <children>
                <CheckBox fx:id="checkSeguro" text="Seguro" />
                <CheckBox fx:id="checkPrioritario" text="Entrega Prioritaria" />
                <CheckBox fx:id="checkFragil" text="Frágil" />
                <CheckBox fx:id="checkFirma" text="Firma Requerida" />
            </children>
        </FlowPane>

        <Label text="Información del Envío" />
        <HBox spacing="20">
            <children>
                <Label text="Costo Estimado:" />
                <Label fx:id="lblCostoEstimado" text='0.00' prefWidth="150.0">
                    <font>
                        <Font/>
                    </font>
                </Label>
            </children>
        </HBox>

        <Separator />

        <HBox spacing="10" alignment="CENTER">
            <children>
                <Button fx:id="btnCrearEnvio" text="Crear Envío" onAction="#crearEnvio" />
                <Button text="Cancelar" onAction="#cancelar" />
            </children>
        </HBox>

        <Label fx:id="lblMensaje" text="" visible="false" />
    </children>
</VBox>