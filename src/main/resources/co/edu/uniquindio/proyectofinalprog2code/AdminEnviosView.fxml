<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.proyectofinalprog2code.ViewController.AdminEnviosViewController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <Label text="Gestión de Envíos">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Separator />

        <HBox spacing="10">
            <children>
                <Label text="Filtrar por estado:" />
                <ComboBox fx:id="comboEstado" prefWidth="150.0" promptText="Todos" />
                <Button text="Filtrar" onAction="#filtrarEnvios" />
                <Button text="Mostrar Todos" onAction="#mostrarTodos" />
            </children>
        </HBox>

        <HBox spacing="10">
            <children>
                <TableView fx:id="tablaEnvios" prefHeight="500.0" prefWidth="1150.0" HBox.hgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="100.0" text="ID" />
                        <TableColumn fx:id="colUsuario" prefWidth="150.0" text="Usuario" />
                        <TableColumn fx:id="colOrigen" prefWidth="200.0" text="Origen" />
                        <TableColumn fx:id="colDestino" prefWidth="200.0" text="Destino" />
                        <TableColumn fx:id="colEstado" prefWidth="100.0" text="Estado" />
                        <TableColumn fx:id="colRepartidor" prefWidth="150.0" text="Repartidor" />
                        <TableColumn fx:id="colFecha" prefWidth="150.0" text="Fecha" />
                        <TableColumn fx:id="colCosto" prefWidth="100.0" text="Costo" />
                    </columns>
                </TableView>
            </children>
        </HBox>

        <HBox spacing="10">
            <children>
                <Button text="Asignar Repartidor" onAction="#asignarRepartidor" />
                <Button text="Cambiar Estado" onAction="#cambiarEstado" />
                <Button text="Ver Detalle" onAction="#verDetalle" />
            </children>
        </HBox>
    </children>
</VBox>